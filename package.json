{
  "name": "erp-system-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start:dev": "npm-run-all --parallel masterData:server dev",
    "dev": "vite --host",
    "masterData:server": "npm-run-all --parallel registrationCertificates:db nameOfDrug:db", 
    "registrationCertificates:db": "json-server ./src/api/fake-api/fake-db/registration-certificates/db.json --port 3124", 
    "nameOfDrug:db": "json-server ./src/api/fake-api/fake-db/name-of-drugs/db.json --port 3125", 
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.2.2",
    "@chakra-ui/react": "^2.9.3",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@tanstack/react-form": "^0.33.0",
    "@tanstack/react-query": "^5.56.2",
    "@tanstack/zod-form-adapter": "^0.33.0",
    "axios": "^1.7.7",
    "dayjs": "^1.11.13",
    "formik": "^2.4.6",
    "framer-motion": "^11.10.0",
    "history": "^5.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "uuid": "^10.0.0",
    "yup": "^1.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "json-server": "^1.0.0-beta.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1"
  }
}
